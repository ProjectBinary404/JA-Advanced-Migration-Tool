<extension type="component" method="upgrade">
    <name>COM_CMSMIGRATOR</name>
    <author>Joomla Academy</author>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <creationDate>2025-06-05</creationDate>
    <copyright>(C) 2025 Open Source Matters, Inc.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>0.2.0</version>
    <description>COM_CMSMIGRATOR_DESCRIPTION</description>
    <namespace path="src">Joomla\Component\CmsMigrator</namespace>
    <scriptfile>script.php</scriptfile>
    <files folder="site">
    </files>
    
    <media destination="com_cmsmigrator" folder="media/com_cmsmigrator">
        <filename>joomla.asset.json</filename>
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <administration>
        <files folder="admin">
            <folder>services</folder>
            <folder>forms</folder>
            <folder>language</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>sql</folder>
            <file>access.xml</file>
        </files>

        <languages folder="admin/language">
            <language tag="en-GB">en-GB/com_cmsmigrator.ini</language>
            <language tag="en-GB">en-GB/com_cmsmigrator.sys.ini</language>
        </languages>

        <install>
            <sql>
                <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
                <file driver="postgresql" charset="utf8">sql/install.postgresql.utf8.sql</file>
            </sql>
        </install>
        
        <menu line="option=com_cmsmigrator" img="class:default">COM_CMSMIGRATOR_MENU_BACKEND</menu>
    </administration>
</extension>
